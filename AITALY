<h2>MainForm.cs</h2>
<pre><code class="csharp">using System;
using System.Collections.Generic;
using System.Windows.Forms;namespace QuoteGenerator { public partial class MainForm : Form { List<string> quotes = new List<string>() { "Мақсатыңа жете білу – үлкен өнер. — Әбіш Кекілбайұлы", "Еңбек етсең ерінбей, тояды қарның тіленбей. — Абай", "Білімдіден шыққан сөз, талаптыға болсын кез. — Абай" };

Random random = new Random();

    public MainForm()
    {
        InitializeComponent();
    }

    private void btnRandom_Click(object sender, EventArgs e)
    {
        int index = random.Next(quotes.Count);
        lblQuote.Text = quotes[index];
    }

    private void btnAdd_Click(object sender, EventArgs e)
    {
        AddQuoteForm form = new AddQuoteForm();
        if (form.ShowDialog() == DialogResult.OK)
        {
            quotes.Add(form.NewQuote);
        }
    }
}

}</code></pre>

<h2>MainForm.Designer.cs</h2>
<pre><code class="csharp">namespace QuoteGenerator
{
    partial class MainForm
    {
        Label lblQuote;
        Button btnRandom;
        Button btnAdd;private void InitializeComponent()
    {
        this.Text = "Цитата Генераторы";
        this.Width = 600;
        this.Height = 300;

        lblQuote = new Label();
        lblQuote.Text = "Цитата осында шығады";
        lblQuote.AutoSize = false;
        lblQuote.Width = 500;
        lblQuote.Height = 80;
        lblQuote.Top = 30;
        lblQuote.Left = 50;
        lblQuote.TextAlign = ContentAlignment.MiddleCenter;

        btnRandom = new Button();
        btnRandom.Text = "Кездейсоқ Цитата";
        btnRandom.Top = 130;
        btnRandom.Left = 200;
        btnRandom.Click += btnRandom_Click;

        btnAdd = new Button();
        btnAdd.Text = "Жаңа Цитата Қосу";
        btnAdd.Top = 170;
        btnAdd.Left = 200;
        btnAdd.Click += btnAdd_Click;

        this.Controls.Add(lblQuote);
        this.Controls.Add(btnRandom);
        this.Controls.Add(btnAdd);
    }
}

}</code></pre>

<h2>AddQuoteForm.cs</h2>
<pre><code class="csharp">using System;
using System.Windows.Forms;namespace QuoteGenerator { public partial class AddQuoteForm : Form { public string NewQuote { get; private set; }

public AddQuoteForm()
    {
        InitializeComponent();
    }

    private void btnSave_Click(object sender, EventArgs e)
    {
        NewQuote = txtQuote.Text + " — " + txtAuthor.Text;
        this.DialogResult = DialogResult.OK;
        this.Close();
    }
}

}</code></pre>

